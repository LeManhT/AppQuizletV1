<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end">

        <TextView
            android:id="@+id/txtFavouriteWord"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawablePadding="@dimen/pad_5"
            android:gravity="center"
            android:paddingHorizontal="@dimen/mar_10"
            android:paddingVertical="@dimen/pad_5"
            android:text="Favourite words"
            android:textSize="15sp"
            android:background="@color/my_primary_color"
            android:textStyle="bold"
            app:drawableEndCompat="@drawable/translate" />
    </androidx.cardview.widget.CardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvListSolutionImages"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/mar_10"
        android:layout_height="match_parent" />

</LinearLayout>
